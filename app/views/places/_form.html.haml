= nested_form_for @place do |f|
  - if @place.errors.any?
    #error_explanation
      %h2= "#{pluralize(@place.errors.count, "error")} prohibited this place from being saved:"
      %ul
        - @place.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :rating
    = f.text_field :rating
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :visited_count
    = f.number_field :visited_count
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.fields_for :images do |i|
      = i.file_field :photo
      = i.link_to_remove "Remove this image"
    = f.link_to_add "Add an image", :images
  .actions
    = f.submit 'Save'
